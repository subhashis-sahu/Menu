<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"

    android:layout_marginBottom="2sp"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/crdone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="12dp"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"

        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <ImageView
                android:id="@+id/BrkFast"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/breakfast"
                />
            <TextView
                android:id="@+id/txtbrkFast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/BrkFast"
                android:text="@string/breakfast"
                android:fontFamily="@font/mblack"
                android:textSize="30dp"
                android:textColor="#FF3A3A"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/BrkFast"
                android:layout_below="@id/txtbrkFast"
                android:text="@string/_0_iteams"/>
            <ImageView
                android:id="@+id/frstArrow"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/roundarrow"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/crdTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="12dp"
        app:cardCornerRadius="20dp"
        android:layout_below="@id/crdone"
        android:layout_marginTop="10dp"
        app:cardUseCompatPadding="true"

        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <ImageView
                android:id="@+id/lunchImg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/briyani"
                />
            <TextView
                android:id="@+id/lunchtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/lunchImg"
                android:text="@string/LUNCH"
                android:fontFamily="@font/mblack"
                android:textSize="30dp"
                android:textColor="#FF3A3A"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/lunchImg"
                android:layout_below="@id/lunchtxt"
                android:text="@string/_0_iteams"/>
            <ImageView
                android:id="@+id/secArrow"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/roundarrow"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/crdThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="12dp"
        app:cardCornerRadius="20dp"
        android:layout_below="@id/crdTwo"
        android:layout_marginTop="10dp"
        app:cardUseCompatPadding="true"

        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <ImageView
                android:id="@+id/snacksImg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/snacks"
                />
            <TextView
                android:id="@+id/snacktxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/snacksImg"
                android:text="@string/snacks"
                android:fontFamily="@font/mblack"
                android:textSize="30dp"
                android:textColor="#FF3A3A"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/snacksImg"
                android:layout_below="@id/snacktxt"
                android:text="@string/_0_iteams"/>
            <ImageView
                android:id="@+id/thirdArrow"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/roundarrow"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/crdfour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="12dp"
        app:cardCornerRadius="20dp"
        android:layout_below="@id/crdThree"
        android:layout_marginTop="10dp"
        app:cardUseCompatPadding="true"

        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <ImageView
                android:id="@+id/dinnerImg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/dinner"
                />
            <TextView
                android:id="@+id/dinnertxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/dinnerImg"
                android:text="@string/LUNCH"
                android:fontFamily="@font/mblack"
                android:textSize="30dp"
                android:textColor="#FF3A3A"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/dinnerImg"
                android:layout_below="@id/dinnertxt"
                android:text="@string/_0_iteams"/>
            <ImageView
                android:id="@+id/fourArrow"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/roundarrow"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
        />



</RelativeLayout>